// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categories  Category[]
  timeEntries TimeEntry[]
  tasks       Task[]
  projects    Project[]

  @@map("users")
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  color     String   // Hex color code
  icon      String   // Icon name/identifier
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  timeEntries TimeEntry[]

  @@index([userId])
  @@map("categories")
}

model TimeEntry {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  userId     String    @db.ObjectId
  categoryId String    @db.ObjectId
  startTime  DateTime
  endTime    DateTime?
  duration   Int       @default(0) // Duration in seconds
  notes      String?
  isManual   Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  taskIds String[] @db.ObjectId
  tasks   Task[]   @relation(fields: [taskIds], references: [id])

  @@index([userId])
  @@index([categoryId])
  @@index([startTime])
  @@map("time_entries")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  color       String        @default("#000000")
  status      ProjectStatus @default(ACTIVE)
  deadline    DateTime?
  budget      Int?          // in minutes
  userId      String        @db.ObjectId
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@index([userId])
  @@map("projects")
}

model Task {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String    @db.ObjectId
  title         String
  description   String?
  priority      Priority   @default(MEDIUM)
  status        TaskStatus @default(TODO)
  estimatedTime Int        @default(0) // in minutes
  scheduledDate DateTime? // For daily planning
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId String?  @db.ObjectId
  project   Project? @relation(fields: [projectId], references: [id])

  timeEntryIds String[]    @db.ObjectId
  timeEntries  TimeEntry[] @relation(fields: [timeEntryIds], references: [id])

  @@index([userId])
  @@index([scheduledDate])
  @@index([projectId])
  @@map("tasks")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}
