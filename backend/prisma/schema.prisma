// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categories  Category[]
  timeEntries TimeEntry[]
  tasks       Task[]

  @@map("users")
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  color     String   // Hex color code
  icon      String   // Icon name/identifier
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  timeEntries TimeEntry[]

  @@index([userId])
  @@map("categories")
}

model TimeEntry {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  userId     String    @db.ObjectId
  categoryId String    @db.ObjectId
  startTime  DateTime
  endTime    DateTime?
  duration   Int       @default(0) // Duration in seconds
  notes      String?
  isManual   Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  taskIds String[] @db.ObjectId
  tasks   Task[]   @relation(fields: [taskIds], references: [id])

  @@index([userId])
  @@index([categoryId])
  @@index([startTime])
  @@map("time_entries")
}

model Task {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String    @db.ObjectId
  title         String
  description   String?
  priority      Priority  @default(MEDIUM)
  estimatedTime Int       @default(0) // in minutes
  isCompleted   Boolean   @default(false)
  scheduledDate DateTime? // For daily planning
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  timeEntryIds String[]    @db.ObjectId
  timeEntries  TimeEntry[] @relation(fields: [timeEntryIds], references: [id])

  @@index([userId])
  @@index([scheduledDate])
  @@map("tasks")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
